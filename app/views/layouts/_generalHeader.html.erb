    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container" style="max-width: 750px">
	  <nav>
            <ul class="nav pull-left">
	      <li><%= link_to "OOUG",    root_path %></li>
	      <li><%= link_to "Help",    help_path %></li>
	      <li><%= render 'layouts/browse' %></li>
	    </ul>
            <ul class="nav pull-right">
	      <% if signed_in? %>
              <% if admin? %>
	      <%= render 'layouts/adminDropdown' %>
	      <% end %>
	      <%= render 'layouts/accountDropdown' %>
              <% else %>
              <li><%= link_to "Sign in", signIn_path %></li>
	      <li><%= link_to "Sign up", signUp_path %></li>
	      <% end %>
 	      <li style="padding-top: 5px" >
		<%= form_tag search_index_path, class: "navbar-form", method: "get" do %>
		<div class="input-prepend span1">
		  <span class="icon-search"></span>  
		  <%= text_field_tag :search, params[:search],  class: "span2 search-query", placeholder: "Search for a game"%>
		</div>
		<% end %>
	      </li>

	    </ul>
          </nav>
        </div>
      </div>
    </header>
