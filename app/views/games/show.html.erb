<% provide(:title, @game.eng_title) %>

<h1 class="game_title"><%= @game.eng_title %></h1>
<h5 class="game_title"><%= (@game.jap_title ? @game.jap_title : "" );%></h5>
<h5 class="game_title"><%= link_to @game.region.region_title, region_path(@game.region), id: "region-title"  %></h5>
<h6 class="game_title"><%= @game.ean %></h6>

<% if signed_in? %>
<% if !in_collection(@game) %>
<%=    link_to new_ownership_path, class: "span2 offset2" do %>
<div class="btn btn-small btn-inverse">
  Add To Collection
</div>
<% end %>

<% else %>
<%= link_to "You Own This", ownership_path(ownership_game(@game)), class: "offset2 btn btn-small btn-inverse" %>

<% end %>
<% end %>

<%= link_to "Edit Game Info", edit_game_path, class: "btn btn-small btn-inverse" %>
