<% provide(:title, "Edit " + @overgame.first.games.eng_title) %>
<%= render 'shared/game_error_messages' %> 

<div class="container inventory_games" style="background-color: white; padding-top: 60px;">
<h1 class="game_title"><%= @overgame.first.games.eng_title %></h1>

<div class="row span10" style="margin-top: 100px">
  <div class="">

    <%= form_for(@game, :html => {:class => "form-horizontal"}) do |f| %>

	<%= f.label :notes, class: "col-sm-2 control-label", style: "padding-right: 5px"%>
	<%= f.text_area(:notes, cols: 500, rows: 3) %>

	<%= f.text_field :games_id, value: @overgame.first.games.id,  class: "readonly" , style: "visibility: hidden"%>
<br />
      <%= f.submit "Update Wish Info", class: "btn btn-inverse btn-small" %>
    <% end %>
</div>

</div>
</div>
