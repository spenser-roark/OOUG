<% provide(:title, @game.eng_title) %>

<h1 class="game_title"><%= @game.eng_title %></h1>
<h5 class="game_title"><%= (@game.jap_title ? @game.jap_title : "" );%></h5>
<h5 class="game_title"><%= link_to @game.region.region_title, region_path(@game.region), id: "region-title"  %></h5>
<h6 class="game_title"><%= @game.ean %></h6>

<% if signed_in? %>
<% if !in_collection(@game) %>
<%= link_to "Add To Collection", new_ownership_path, class: "span2 btn btn-small btn-inverse offset2" %>

<% else %>
<%= link_to "You Own This", ownership_path(ownership_game(@game)), class: "span2 btn btn-small btn-inverse offset2" %>

<% end %>
<% end %>

<% if signed_in? %>
<%= link_to "Edit Game Info", edit_game_path, class: "span2 btn btn-small btn-inverse" %>
<% end %>

<% if signed_in? %>    
<% if admin? %>
<%= link_to "Remove From System", @game , class: "span2 btn btn-small btn-inverse", confirm: "Really? Delete this game?", method: "delete" %>
<% end %>
<% end %>
